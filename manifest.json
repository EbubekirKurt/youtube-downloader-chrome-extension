{
  "manifest_version": 3,
  "name": "YouTube Video İndirici",
  "version": "1.0",
  "description": "Chrome sekmelerinden YouTube videolarını MP3/MP4 olarak indirin",
  "permissions": [
    "activeTab",
    "tabs",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtu.be/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Video İndirici",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtu.be/*"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
